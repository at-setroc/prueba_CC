{% extends 'navegation/main.html.twig' %}

{% block title %}{{"Inicio"|trans}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/top_bar.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/categories.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/categories.js') }}"></script>
{% endblock %}

{% block content %}

    {% import "macros/categories-menu-macro.html.twig" as categoryMacro %}

    <div class="d-flex mb-4 justify-content-between align-items-center noselect">
        <h2 class="m-0">
            <i class="bi bi-tags-fill text-danger me-2"></i>
            {{"Categor√≠as"|trans}}
        </h2>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-success" href="{{ path("app_users") }}">
                <i class="bi bi-people-fill"></i>
                {{"Lista de usuarios"|trans}}
            </a>
        {% endif %}
    </div>
    <hr class="mb-4">

    <div id="categories" class="noselect">
        <ul class="list-group">
            {{ categoryMacro.menu_categories(mainCategories) }}
        </ul>
    </div>
{% endblock %}
